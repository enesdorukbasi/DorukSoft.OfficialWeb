<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partial/_HeaderPartial.cshtml")
<body>
    <div id="layout-wrapper">
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partial/_NavbarPartial.cshtml")
        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partial/_SidebarPartial.cshtml")
        <div class="main-content">
            <div class="page-content">
                @RenderBody()
            </div>
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partial/_FooterPartial.cshtml")
        </div>
    </div>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partial/_ScriptPartial.cshtml")
    @RenderSection("Scripts", required: false)
</body>
</html>